import turtle as t

t.hideturtle()
t.speed(0)

class Renderer:
    def RenderRectangle(playerX, playerY, width, height):
        t.goto(playerX, playerY)
        t.fillcolor("light blue")
        t.begin_fill()
        for i in range(2):
            t.forward(width)
            t.left(90)
            t.forward(height)
            t.left(90)
        t.end_fill()
        


while True:
    Renderer.RenderRectangle(0,0,20,50)
